    .bn632-hover {
        width: 190px;
        font-size: 16px;
        font-weight: 600;
        color: #fff;
        cursor: pointer;
        margin: 10px;
        height: 50px;
        text-align: center;
        border: none;
        background-size: 300% 100%;
        border-radius: 50px;
