    .bn48 {
        background: linear-gradient(90deg, #c7a0cf, #c52d28);
        background-size: auto;
        background-clip: border-box;
        -webkit-background-clip: text;
        background-clip: text;
        background-size: 300% 300%;
        -webkit-text-fill-color: transparent;
    }

